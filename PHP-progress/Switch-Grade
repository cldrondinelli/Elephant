//Switch

$date = "Sunday";

switch ($date) {
    case 'Monday':
        echo "I hate Mondays";
        break;
    case 'Tuesday':
        echo "It is  Taco Tuesday";
        break;
    case 'Wednesday':
        echo "The work week is half over";
        break;
    case 'Thursday':
        echo "It's almost the weekend";
        break;
    case 'Friday':
        echo "The weekend is here";
        break;
    case 'Saturday':
        echo "Time to Grind";
        break;
    case 'Sunday':
        echo "It's God's time";
        break;
    default: {
            echo "{$date} is not a valid date";
        }
}
